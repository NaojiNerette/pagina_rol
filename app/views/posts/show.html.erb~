<div class="texto_contenido">
<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Body:</b>
  <%= @post.body %>
</p>

<p>
  <b>Category:</b>
  <%= @post.category %>
</p>

<h2>Comentarios</h2>

<b><%= @post.comments.count %> comentarios</b>

<% @post.comments.each do |c| %>
  <p>
    <b><%= c.name %> said:</b><br />
  </p>

  <p>
    <%= c.body %>
  </p>
<% end %>


<br />

<%= form_for[@post, @post.comments.build] do |f| %>
  
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


<%= link_to 'Back', posts_path %>
</div>
